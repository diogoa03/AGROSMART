# Ambiente Flask (development/production)
FLASK_ENV=development

# Chave secreta para sessões e tokens (mínimo 32 caracteres)
SECRET_KEY=change-this-to-32-random-characters-in-production-1234

# URL de conexão com o banco SQLite
DATABASE_URL=sqlite:///agrosmart.db

# Chave API do OpenWeatherMap
# Obtenha em: https://openweathermap.org/api
OPENWEATHER_API_KEY=your-api-key-here

# Modo debug (True/False)
DEBUG=True

# Configurações da API
API_TIMEOUT=10
MAX_RETRIES=3
RATE_LIMIT=100

# Configurações do servidor
PORT=5000
HOST=0.0.0.0