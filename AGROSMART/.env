# Ambiente Flask (development/production)
# Controla configurações de debug e cache
FLASK_ENV=development

# Chave secreta para sessões e tokens
# Deve ter pelo menos 32 caracteres aleatórios
# NUNCA use esta chave em produção
SECRET_KEY=change-this-to-32-random-characters-in-production

# URL de conexão com o banco SQLite
# Formato: sqlite:///path/to/database.db
# Em produção, use caminho absoluto
DATABASE_URL=sqlite:///agrosmart.db

# Chave API do OpenWeatherMap 
# Obtenha em: https://openweathermap.org/api
# Mantenha esta chave segura
OPENWEATHERMAP_API_KEY=your-api-key-here

# Modo debug (True/False)
# Habilita logs detalhados e auto-reload
# Desative em produção
DEBUG=True

# Configurações da API
API_TIMEOUT=10
MAX_RETRIES=3
RATE_LIMIT=100

# Configurações do servidor
PORT=5000
HOST=0.0.0.0