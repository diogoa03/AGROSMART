# Ambiente Flask (development/production)
FLASK_ENV=development

# Chave secreta para sessões e tokens (32+ caracteres)
SECRET_KEY=change-this-to-32-random-characters-in-production-1234

# Chave JWT (pode ser igual à SECRET_KEY em desenvolvimento)
JWT_SECRET_KEY=change-this-to-32-random-characters-in-production-1234

# Tempo de expiração do token JWT (em segundos)
JWT_ACCESS_TOKEN_EXPIRES=3600

# URL do banco de dados
DATABASE_URL=sqlite:///agrosmart.db

# Chave API do OpenWeatherMap
OPENWEATHER_API_KEY=your-api-key-here

# Configurações de Debug
DEBUG=True

# Configurações da API
API_TIMEOUT=10
MAX_RETRIES=3
RATE_LIMIT=100

# Configurações do servidor
PORT=5000
HOST=0.0.0.0